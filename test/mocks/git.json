{
    "kind": "shell",
    "spec": {
        "command": "git",
        "args": [
            {
                "command": "clone",
                "args": [
                    {
                        "name": "url",
                        "type": "value",
                        "required": true
                    },
                    {
                        "name": "dest",
                        "type": "value"
                    }
                ]
            },
            {
                "command": "rev-parse",
                "args": [
                    {
                        "name": "short",
                        "type": "option",
                        "join": "=",
                        "default": 12
                    },
                    {
                        "name": "refspec",
                        "type": "value",
                        "default": "HEAD"
                    }
                ]
            }
        ]
    }
}
